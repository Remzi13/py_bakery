{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build PyInstaller",
            "type": "shell",
            "command": "${command:python.interpreterPath}",
            "args": [
                "-m", "PyInstaller",
                "--onefile",
                "--noconsole",
                "${workspaceFolder}/main_app.py",
                "--icon=${workspaceFolder}/bakery_manager.ico"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        }
    ]
}
